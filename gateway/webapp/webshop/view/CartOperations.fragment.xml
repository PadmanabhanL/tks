<core:FragmentDefinition xmlns="sap.m" 
	xmlns:core="sap.ui.core">
	<Dialog title="Cart" type="Message" contentWidth="auto">
		<content>
			<Text text="What would you like to do with the selected cart?"/>
		</content>
		<buttons>
			<Button text="Delete" type="Reject" width="auto" press="onCartOperationsDeleteCartPressed" />
			<Button text="Create Order" type="Accept" width="auto" press="onCartOperationsCreateSalesOrderPressed" />
			<Button text="Cancel" width="auto" press="onCartOperationsCancelPressed" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>
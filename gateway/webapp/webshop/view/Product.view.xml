	xmlns:core="sap.ui.core" 
	xmlns:l="sap.ui.layout" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:shop="com.sap.espm.shop.control" 
	xmlns:table="sap.ui.table" 
	xmlns="sap.m">
